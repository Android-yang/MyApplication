<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yange.myapplication.widget.recycleview.BadgeTextView
        android:id="@+id/notice_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:drawableTop="@drawable/notice"
        android:gravity="center"
        android:text="Me" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Btn1"
        android:textSize="@dimen/dp12" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Btn2"
        android:textSize="@dimen/dp12" />

    <TextView
        android:id="@+id/tv1"
        android:text="fun configUrl(tv: TextView, clickableSpan: ClickableSpan?, style: SpannableStringBuilder, start: Int, end: Int, color: Int) { style.setSpan(clickableSpan, start, end, Spannable.SPAN_EXCLUSIVE_EXCLUSIVE) tv.text = style val foregroundColorSpan = ForegroundColorSpan(color) style.setSpan(foregroundColorSpan, start, end, Spannable.SPAN_EXCLUSIVE_EXCLUSIVE) tv.movementMethod = LinkMovementMethod.getInstance() tv.text = style}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>