<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- PinEntryEditText has error set -->
    <item android:state_active="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ea5454" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!--已经输入过框的背景-->
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#168cd8" />
        </shape>
    </item>
    <!--当前要输入框的背景-->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#168cd8" />
        </shape>
    </item>

    <!--    Space contains text and not focused-->
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#dde9f8" />
        </shape>
    </item>
    <!--输入框有焦点后的背景-->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#4Dffffff" />
            <stroke android:width="1dp" android:color="#e7ebf3" />
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#4Dffffff" />
            <stroke android:width="1dp" android:color="#e7ebf3" />
        </shape>
    </item>

</selector>
