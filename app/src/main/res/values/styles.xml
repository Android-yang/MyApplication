<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--个人信息收集进度-->
    <style name="personal_info_progress_horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/sha_progressbar_personal_30</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="rr_account_text_file_error">
        <item name="android:textColor">#ea5953</item>
        <item name="android:textSize">12dp</item>
    </style>

    <declare-styleable name="RRTextInputLayout">
        <attr name="errorEnable" format="boolean" />
        <attr name="errorTypeFace" format="reference" />
        <attr name="errorGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="errorMaxLines" format="integer" />
        <attr name="updateEditTextBg" format="boolean" />
        <attr name="updateTextColor" format="boolean" />
        <attr name="errorHeight" format="dimension" />
        <attr name="errorPaddingStart" format="dimension" />
        <attr name="errorDividerVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CleanCountEditText">
        <attr name="txt_size" format="string" />
    </declare-styleable>
</resources>
